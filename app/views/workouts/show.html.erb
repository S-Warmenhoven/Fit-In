<h1>Workout</h1>
<p><%= user_friendly_range(@workout.start_time) %> to <%= readable_time(@workout.end_time) %> - <%= @workout.user.first_name %></p>
<% @user = current_user%>
<button><%= link_to 'Book', new_workout_user_workout_path(@workout, @user_workout) %></button>
<button><%= link_to 'Back', workouts_path %></button>
<% if can? :crud, @workout %>
    <hr>
    <%= link_to("Delete", workout_path(@workout), method: :delete, data:{confirm:'Are you sure?' }) %>
    <br />
    <%= link_to 'Edit', edit_workout_path(@workout.id)%>
    <hr>
<% end %>

