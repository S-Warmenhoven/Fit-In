<h1><%= icon('fas', 'shopping-cart') %> Orders</h1>

<% if @user_meals.length > 0 %>
    <% @user_meals.each do |user_meal| %>
    <div>
        <p> - <%= user_meal.food_item.name %>, <%= user_meal.user.full_name %> | <%= user_friendly_range(user_meal.created_at) %></p>
    </div>
    <% end%>
<% else %>
    <p>No current orders.</p>
<% end %>