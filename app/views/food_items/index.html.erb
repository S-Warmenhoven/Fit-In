<p id="notice"><%= notice %></p>

<h1>Menu</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @food_items.each do |food_item| %>
      <% if food_item.image_url != "" %>
        <%= image_tag food_item.image_url, alt: 'food_item-image', class: 'food_item' %>
      <% end %>
      <h2><%= food_item.name %></h2>
      <p><%= food_item.description %></p>
      <p>$<%= food_item.price %></p>
      <p># <%= food_item.meal_number %></p>
      <tr>
        <td><%= link_to 'Show', food_item %></td>
        <td><%= link_to 'Edit', edit_food_item_path(food_item) %></td>
        <td><%= link_to 'Destroy', food_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New food_item', new_food_item_path %>
